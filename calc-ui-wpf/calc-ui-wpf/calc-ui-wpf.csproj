    <RootNamespace>calc_ui_wpf</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\bg-art-text.txt" />
    <None Remove="Resources\cuddlyferris.png" />
    <None Remove="Resources\rustacean-gesture.png" />
    <None Remove="Resources\rustacean-org.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\bg-art-text.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\cuddlyferris.png" />
    <Resource Include="Resources\rustacean-gesture.png" />
    <Resource Include="Resources\rustacean-org.png" />
  </ItemGroup>

  <ItemGroup>
    <None Update="rust_calc.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
